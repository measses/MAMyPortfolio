@using Entities
@model List<About>
@{
    Layout = null;
}

<section id="about" class="about">
    <div class="container">
        <div class="section-title">
            <h2>About</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4" data-aos="fade-right">
                    <img src="@item.ImageUrl" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                    <h3>Jr. Full-Stack Developer</h3>
                    <p class="fst-italic">@item.Description</p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Ünvan:</strong> <span>@item.Title</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon No:</strong> <span>@item.Phone</span></li>
                            </ul>
                        </div>
                     
                    </div>
                    <div class="col-lg-6 mx-3 mt-3">
                        <ul class="social-icons d-flex">
                            <li class="me-3"><a href="#"><i class="bi bi-facebook"></i></a></li>
                            <li class="me-3"><a href="#"><i class="bi bi-twitter"></i></a></li>
                            <li class="me-3"><a href="#"><i class="bi bi-instagram"></i></a></li>
                            <li><a href="#"><i class="bi bi-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            }
        </div>


    </div>
</section>